@model PersonalLibraryWebApplication.ViewModel.QueryViewModel

@{
    ViewBag.Title = "Книги за вибраними категоріями (книга містить усі вибрані категоії)";
}

<h1>Книги, що містять усі вибрані категорії</h1>
<div class="row">
    <div>
        @using (Html.BeginForm("FilterBooksByAllCategories", "Query", FormMethod.Post))
        {
            <div style="padding-top:20px; padding-bottom:20px;">
                <label>Виберіть категорії:</label>
                <select id="categoriesSelect" name="SelectedIds" multiple="multiple">                    
                    @foreach (var category in Model.AvailableCategories)
                    {
                        <option value="@category.Id">@category.Title</option>
                    }
                </select>
            </div>
            <button class="btn btn-secondary" type="submit">Показати книги</button>
        }
    </div>

    <div style="padding-top:40px;">
        @if (Model.Books != null && Model.Books.Count > 0)
        {
            <h3>Список книг:</h3>
            <ul>
                @foreach (var book in Model.Books)
                {
                    <li>@book.Title</li>
                }
            </ul>
        }
        else if (Model.Books != null)
        {
            <p>Немає книг для відображення.</p>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#categoriesSelect').select2();
        });
    </script>
}